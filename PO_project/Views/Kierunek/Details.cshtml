@model PO_project.Models.Kierunek

@{
    ViewData["Title"] = Model.Name;
}

@foreach (var specjalizacja in Model.Specjalizacje)
{
    <p>@specjalizacja.Name</p>
}

<div class="kierunek-details">
    <h4>Kierunek</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Abbreviation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Abbreviation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Jezyk)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Jezyk.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stopien)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stopien.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tryb)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tryb.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CzasTrwania)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CzasTrwania.Value)
        </dd>
    </dl>
</div>
