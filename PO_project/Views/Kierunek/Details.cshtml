@model PO_project.Models.Kierunek

@{
    ViewData["Title"] = Model.Name;
}

<link rel="stylesheet" href="~/css/details.css"/>


<div class="main-content-container">
    <h1>@Html.DisplayFor(model => model.Name)</h1>

    <div class="top-choice-box">
        <div class="description-holder">
        <p>Opis kierunku</p>
        </div>
        @if (Model.Specjalizacje.ToList().Count > 0)
        {
            <div class="description-holder">
            <p class="specialities">Specjalności</p>
            </div>
        }
        <div class="description-holder">
        <p>Kryteria</p>
        </div>
    </div>

    @foreach (var specjalizacja in Model.Specjalizacje)
    {
        <p>@specjalizacja.Name</p>
    }



    <div class="kierunek-details">
        <h4>Kierunek</h4>
    
        <dl class="row">
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Abbreviation)
            </dd>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Jezyk.Name)
            </dd>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Stopien.Name)
            </dd>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Tryb.Name)
            </dd>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CzasTrwania.Value)
            </dd>
        </dl>
    </div>

    @foreach (var perspektywa in Model.Perpektywy)
    {
        <p>@perspektywa.Pracodawca.CompanyName</p>
    }

</div>